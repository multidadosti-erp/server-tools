<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_full_cleanup_wizard" model="ir.ui.view">
        <field name="name">cleanup.full.cleanup.wizard.form</field>
        <field name="model">cleanup.full.cleanup.wizard</field>
        <field name="arch" type="xml">
            <form string="Full cleanup">
                <group>
                    <field name="log" nolabel="1" readonly="1"/>
                </group>
                <footer>
                    <button string="Run full cleanup"
                            type="object"
                            name="action_run_full_cleanup"
                            class="btn-primary"/>
                    <button string="Close" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_full_cleanup_wizard" model="ir.actions.act_window">
        <field name="name">Full cleanup</field>
        <field name="res_model">cleanup.full.cleanup.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_full_cleanup_wizard"/>
        <field name="target">new</field>
    </record>
</odoo>
